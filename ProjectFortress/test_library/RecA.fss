component RecA
  import RecB.{...}
  export RecA

  trait Odd
    getter anEven(): Even
  end

  odd(x:ZZ32): Boolean =
    if x = 0 then false
    elif x > 0 then even(x-1)
    elif x < 0 then even(x+1)
    end

end
