component OpenRangeCase
export Executable

(* Test: Does case work on open or semi-open ranges? *)

tst(rng:Range[\ZZ32\], isin:ZZ32, notin:ZZ32):() = do
    case isin of
        rng => print(".")
        else => fail(isin " NOTIN " rng)
    end
    case notin of
        rng => fail(notin " IN " rng)
        else => print(".")
    end
  end

run(args:String...):() = do
    tst(10:20, 17, 3)
    tst(10:, 17, 3)
    tst(:10, 3, 17)
    case 44 of
        : => print("OK")
        else => fail("Open range is still dubious")
    end
  end

end
