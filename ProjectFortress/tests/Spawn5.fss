component Spawn5
export Executable

makeWork(num:ZZ32):ZZ32 = do
   var sum:ZZ32 = 0
   for i<-1#num do
      atomic do sum += 1 end
   end
   sum
end

run():()=do
   ft:Thread[\Any\] = spawn(makeWork(10));
   assert(ft.val(),10, "Spawned thread returned wrong result " )
   ft.stop()
end
end
