component simplify1
export Executable

trait Red[\ R \]
    getter toString() = "A Reduction without a toString() of its own"
    empty(): R
    join(a: R, b: R): R
end


object Mrr[\R\](j:(R,R)->R, z:R) extends Red[\R\]
    getter toString()="mapReduce.Reduction"
    empty() = z
    join(a:R, b:R): R = j(a,b)
end

run(args:String...):()=do
  joinString(a:String, b:String):String = a b
  r1 = Mrr[\String\](joinString, "")
  catdog = r1.join("cat", "dog")
  println (if catdog = "catdog" then "PASS" else "FAIL")
end

end
