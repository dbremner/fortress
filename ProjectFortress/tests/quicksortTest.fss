component quicksortTest
import QuickSort.{...}
export Executable

arr:Array[\ZZ32,ZZ32\] := array[\ZZ32\](5)

run(args:String...) = do
  arr[0] := 5
  arr[1] := 29
  arr[2] := 10
  arr[3] := -3
  arr[4] := 8
  quicksort[\ZZ32\](fn (x:ZZ32, y:ZZ32) => x < y, arr, 0, 4)
  for i <- arr.indices() do
    if i > 0 then
      if arr[i-1] > arr[i] then
        println("FAIL: arr[" (i-1) "]=" arr[i-1] ", arr[" i "]=" arr[i] )
      end
    end
  end
  println(arr)
end

end
