component nestedTransactions

export Executable
test1():()=do
    var count : ZZ32 = 0
    for i<-1#3000 do
        atomic do
            count += 1
        end
        atomic do
            count += 1
            atomic do
                count += 1
            end
        end
        atomic do
            count += 1
            atomic do
                count += 1
                atomic do
                    count += 1
                end
            end
        end
        atomic do
            count += 1
        end
    end
    assert(count,21000,"test1 failed")
end

test2()=do
    var count     : ZZ32 = 0
    var successes : ZZ32 = 0
    var failures  : ZZ32 = 0
    for i<-1#3000 do
        atomic do
            count += 1
            try
                tryatomic do successes += 1 end
            catch e
            TryAtomicFailure => atomic do failures+= 1 end
            end
        end
    end
    assert(count, successes, "TryAtomic should be flattened to a noop")
end

test3()=do
    var count :ZZ32 = 0
    atomic do
        for i<-0#10 atomic do
            for j<-0#10 atomic do
                for k<-0#10 atomic do
                    for l<-0#10 atomic do
                        for m<-0#10 atomic do
                            println("count = " count)
                            count += 1
                        end
                     end
                end
            end
        end
    end
    assert(count,100000, "Nested transactions");
end

run(args:String...):()=do
    test1()
    test2()
    test3()
end
end
