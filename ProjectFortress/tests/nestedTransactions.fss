component nestedTransactions

export Executable
test1()=do
    var count : ZZ32 = 0
    for i<-1#3000 do
        atomic do
            count += 1
        end
        atomic do 
            count += 1
            atomic do
                count += 1
            end
        end
        atomic do
            count += 1
            atomic do
                count += 1
                atomic do
                    count += 1
                end
            end
        end
        atomic do
            count += 1
        end      
    end
    assert(count,21000,"test1 failed")
end

test2()=do
    var count     : ZZ32 = 0
    var successes : ZZ32 = 0
    var failures  : ZZ32 = 0
    for i<-1#3000 do
        atomic do 
            count += 1 
            try
                tryatomic do successes += 1 end
            catch e
            AtomicConflict => atomic do failures+= 1 end 
            end
        end
    end
    assert(count, successes, "TryAtomic should be flattened to a noop")
end

run(args:String...):()=do
    test1()
    test2()
end
end






