component atomic5
export Executable

testNonAtomicsWithAtomics() = do
    var x:ZZ32 := 0
    var y:ZZ32 := 0
    var z:ZZ32 := 0
    var i:ZZ32 := 0

    do
        atomic do 
            x := 1
            while i < 1000 do i := i + 1 end
            y := 1 
        end
    also do
       if x = 1 then z := y else z := 2 end
       if z = 0 then printThreadInfo(" x = " x " y = " y " z = " z) end
       assert(z =/= 0, "testNonAtomicsWithAtomics: Impossible result")
    end
end


run(args:String...):()=do
    for i <- 1#300 do
       testNonAtomicsWithAtomics()
    end
end
end
