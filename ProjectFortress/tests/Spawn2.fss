component Spawn2
export Executable

run(args:String...):()=do
   var x : ZZ32 = 0
   var y : ZZ32 = 0
   pt:Thread[\Any\] = spawn atomic do  x:=1; y := 1 end
   while (x = 0) do end
   assert(x=1,"Spawned thread didn't set x")
   assert(y=1,"Spawned thread didn't set y")
   pt.stop()
end
end
