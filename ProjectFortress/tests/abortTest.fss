component abortTest
export Executable

run():()=do
    iters : ZZ32 = 3000
    successes : ZZ32 := 0
    failures : ZZ32 := 0
    for i <- 0#iters do
        try
            tryatomic do
                successes+= 1
                abort()
            end
        catch e
            TryAtomicFailure => printThreadInfo("Caught TryAtomicFailure"); atomic do failures+= 1 end
        end
    end

    assert(successes=0, "Abort failed")
    assert(failures=iters,"Abort failed")

end
end
