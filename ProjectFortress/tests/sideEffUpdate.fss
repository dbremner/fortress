component sideEffUpdate
export Executable

(* Tests that we can perform side effects within an update. *)
run():()=do
  i : ZZ32 = 0
  a : ZZ32[3] = [5 6 7]
  ipp():ZZ32 = do
    r = i
    i += 1
    r
  end
  a[ipp()] += 17
  if a[0] =/= 22 OR i =/= 1 then
    println("FAIL: a[0]=" a[0] " and i=" i)
  end
end

end
