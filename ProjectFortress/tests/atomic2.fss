component atomic2

export executable

run(args:String...):()=do
   var count1 : ZZ32 = 0
   var count2 : ZZ32 = 0
   var count3 : ZZ32 = 0
   var count4 : ZZ32 = 0
   for i <- 1#300 do
      atomic do count1+= 1; count2+=2; count3+=3; count4+=4 end
   end
   if count1=/=300 OR count2=/=600 OR count3=/=900 OR count4=/=1200 then
     println("FAIL: count1 = " count1)
     println("FAIL: count2 = " count2)
     println("FAIL: count3 = " count3)
     println("FAIL: count4 = " count4)
   else 
   println("SUCCESS")
   end
end
end
