component ExitWithoutTarget
export Executable

  (* Test various properly formed label expressions. *)

  run(args:String...):() = do
    
    (* type of outer should be ZZ32 OR ZZ32 *)
    ignore(label outer
      (* type of inner should be Boolean OR Boolean *)
      ignore(label inner
        exit with true
        exit outer with 5
        false
      end inner as Boolean)
      3
    end outer as IntLiteral)
    ()

  end

end