component CaseExpr
import Set.{...}
export Executable

(* Tests that various normal (not extemum) case expressions type check ok. *)
  
run(args:String...):() = do

  (* No operator *)
  case 5 of
    1 => "1"
    2 => "2"
    3:10 => "range"
  end as String
  case 5 of
    1 => "1"
    2 => "2"
    6:10 => "range"
    else => "else"
  end as String
  case 5:10 of
    1 => 0
    2:10 => 0
    5:10 => 1
    else => -1
  end as ZZ32
  
  (* Operator *)
  planet = "Saturn"
  case planet IN of 
    {"Mercury", "Venus", "Earth", "Mars"} => "inner" 
    {"Jupiter", "Saturn", "Uranus", "Neptune"} => "outer" 
    else => "remote"
  end as String
  case 5 > of
    4 => true
    6 => false
    else => false
  end as Boolean

end

end
