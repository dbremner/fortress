component AssignmentTest
  export Executable

  object Foo

  end

  trait Quux

  end

  object Bar extends Quux

  end

  run(args:String...):() = do
    (* Currently fails because IntLiteral <!: ZZ32
    var a : ZZ32
    a := 1
    *)

    var a:Foo 
    a := Foo 

    (a) := Foo
    (a) := (Foo)
    a := (Foo)

    (* Tuples *)

    var b : Bar
    var c : Quux
    (a,b) := (Foo,Bar)
    (a,c) := (Foo,Bar)

    (* Other operators *) 
  end
end