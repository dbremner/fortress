(*) Test working field ref assignments.

  export Executable

  object O(var s: String)
    setter foo(x: String) = s := x
    opr [i:ZZ32]: String = s
    opr [i:ZZ32] := (x: String) = s := x
  end

  run() = do
    o = O("RLY")
    o.foo ||= "hi"
    o.s += 5
    o.bar := "what?"

    var x: String = "hello"
    ((O(x))[5], x, (O(x)).s) := (4, " world", 3)

    var a: String = ""
    var b: String = ""
    (a, b) ||= (1, 2)
  end
