component Compiled7fo
export Executable

(* First-order version of Compiled7 *)

RR64AsString(x:RR64): String = x.asString()

f(x: RR64): RR64 = x (x x + 1.0)

integrate(l: RR64, h:RR64, tol: RR64): RR64 =
    integrate'(l,h,f(l),f(h),0.0,tol)

integrate'(l: RR64, h:RR64, fl: RR64, fh:RR64, a:RR64, tol: RR64): RR64 = do
    w = 0.5 (h-l)
    hw = 0.5 w
    m = l + w
    fm = f(m)
    al = hw (fl + fm)
    ah = hw (fm + fh)
    alh = al + ah
    if |alh - a| <= |alh| tol OR w <= tol then
        alh
    else
        integrate'(l,m,fl,fm,al,tol) + integrate'(m,h,fm,fh,ah,tol)
    end
  end

elapsedSec(init:RR64, final:RR64): RR64 =
    (final - init) / (10.0^9)

run(): () = do

(* TODO: hoist to top level *)
start : RR64 = 0.0
finish : RR64 = 1536.0
errorTolerance : RR64 = 10.0^(-4) (* should be 10^(-12) *)
reps : ZZ32 = 10
expect = 1.391570583 10.0^12

    println("Time(s)\tArea")
    r = 0#10
    println("Mumble")
    s = r.asString()
    println("Mutter r = " s)
    r.loop(fn _ => do
    (* for _ <- 0#10 do *)
        startTime = nanoTime()
        a = integrate(start,finish,errorTolerance)
        endTime = nanoTime()
        if |a - expect| > errorTolerance a then
            println("FAIL: Bad error tolerance!")
        else ()
        end
        println(RR64AsString(elapsedSec(startTime,endTime)) "\t" RR64AsString(a))
    end)
  end

end
