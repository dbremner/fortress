component OprDecl.Bracketing

export Executable

(*
opr <|x: Vector, y: Vector|> = SUM[i <- x.indices]x[i] DOT y[i]
*)
(** EXAMPLE **)
(* angle bracket notation for inner product *)
opr <|[\T extends Number, nat k\] x: Vector[\T,k\], y: Vector[\T,k\]|> = do
  var result: ZZ32 = 0
  for i <- x.indices() do atomic result += x[i] y[i] end
  result
end
(** END EXAMPLE **)

vector1 = vector[\ZZ32, 2\](2)
vector2 = vector[\ZZ32, 2\](3)

run(args:String...) = do
  assert( <|vector1, vector2|> = 12)
  println("OprDecl.Bracketing.fss passed.")
end

end
