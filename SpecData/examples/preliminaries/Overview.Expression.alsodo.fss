component Overview.Expression.alsodo

export Executable

h() =
(** EXAMPLE **)
do
  factorial(10)
also do
  factorial(5)
also do
  factorial(2)
end
(** END EXAMPLE **)

factorial(n: ZZ32) = do    (* factorial *)
  var result: ZZ32 = 1
  for i <- 1:n do atomic result := result i end
  println result
end

run() = do
  h()
end

end
