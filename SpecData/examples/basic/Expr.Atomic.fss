component Expr.Atomic

export Executable

(** EXAMPLE **)
sum: ZZ32 := 0
accumArray[\N extends Number, nat x\](a: Array1[\N,0,x\]): () =
  for i <- a.indices() do
    atomic sum += a[i]
  end
(** END EXAMPLE **)

run() = do
  accumArray(array1[\ZZ32,3\]().fill(5))
  println sum
end

end
