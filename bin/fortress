export FORTRESS_HOME="`${0%fortress}fortress_home`"

if (uname | egrep CYGWIN > /dev/null) ; then
  SEP=";"
else
  SEP=":"
fi

if [ "$1" = "run" ] ; then
    shift
    $FORTRESS_HOME/bin/run "$@"
else
    TP="$FORTRESS_HOME/ProjectFortress/third_party"
    SV=2.8.0.r21030
    CP="$FORTRESS_HOME/ProjectFortress/build${SEP}$TP/junit/junit.jar${SEP}$TP/asm/asm-all-3.1.jar${SEP}$TP/xtc/xtc.jar${SEP}$TP/jsr166y/jsr166y.jar${SEP}$TP/plt/plt.jar${SEP}$JAVA_HOME/lib/tools.jar${SEP}$TP/unsigned/unsigned.jar${SEP}$TP/astgen/astgen.jar${SEP}$TP/scala/scala-compiler-${SV}.jar${SEP}$TP/scala/scala-library-${SV}.jar${SEP}$FORTRESS_HOME/default_repository/caches/bytecode_cache${SEP}$CP"

    if [ -z "$JAVA_HOME" ] ; then
      JAVACMD=java
    else
      JAVACMD="$JAVA_HOME/bin/java"
    fi

    if [ -z "$JAVA_FLAGS" ] ; then
      JAVA_FLAGS="-Xmx256m  -Xss32m"
    fi
    JAVA_FLAGS+=" -Dfile.encoding=UTF-8"
    "$JAVACMD" $JAVA_FLAGS -cp "$CP" com.sun.fortress.Shell "$@"
fi
