FORTRESS_HOME=`${0%fortify}fortress_home`

USE_EMACS=${USE_EMACS:-emacs}
[ -n "$EMACS" ] && unset EMACSLOADPATH
"${USE_EMACS}" -batch "$@" -l $FORTRESS_HOME/Fortify/fortify.el -f batch-fortify
