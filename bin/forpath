# Prints a line suitable for cutting and pasting into a shell that sets PATH properly

FORTRESS_HOME="`${0%forpath}fortress_home`"

FORTRESS_BIN=`cd ${FORTRESS_HOME}/bin; /bin/pwd`

echo "PATH=\"$FORTRESS_BIN:$PATH\""
